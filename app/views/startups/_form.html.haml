- @og_image = asset_pack_path("media/images/tout_seul_dans_le_bois.png")

%section
  .container
    .row
      .col-12.col-md-6.mx-md-auto
        .page-header
          %h1= @page_title = "Ajouter une nouvelle startup"

        = render partial: "/shared/errors_and_notices", locals: {model: @startup}

        = simple_form_for @startup, defaults: { label: false, wrapper_html: {class: 'bg-light'} } do |f|
          = f.input :logo, label: 'Logo'
          = f.input :name, placeholder: 'Nom'
          = f.input :email, placeholder: 'Email'
          = f.input :url, placeholder: 'Site web'
          = f.input :description, placeholder: 'Que fait votre startup ?'
          .form-group
            .col-12.col-md-9.offset-md-3
              = recaptcha_tags
              %ul.pull-right.list-inline.mt-3
                %li.list-inline-item= link_to 'Retour', {action: :index}, class: "btn btn-link"
                %li.list-inline-item= f.submit "Enregistrer", class: "btn btn-raised btn-primary"
              .form-group
                .col-sm-9.col-sm-offset-3
                  %small
                    = render partial: "explanation"
