%h2.h5= t('.resend_confirmation_instructions')

= simple_form_for resource, as: resource_name, url: confirmation_path(resource_name), defaults: { label: false, wrapper_html: {class: 'bg-light'} } do |f|
  = devise_error_messages!
  = f.input :email
  = f.button :submit, t('.resend_confirmation_instructions'), class: "btn btn-raised btn-primary"
