%h2.h5= t('.sign_in')

= simple_form_for resource, as: resource_name, url: session_path(resource_name), defaults: { label: false, wrapper_html: {class: 'bg-light'} } do |f|
  = f.input :email, required: false, autofocus: true, placeholder: 'Email'
  = f.input :password, required: false, placeholder: 'Mot de passe'
  = f.button :submit, t('.sign_in'), class: "btn btn-raised btn-primary"
