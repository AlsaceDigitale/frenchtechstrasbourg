%h2.h5= t('.forgot_your_password')

= simple_form_for resource, :as => resource_name, :url => password_path(resource_name), defaults: { label: false, wrapper_html: {class: 'bg-light'} } do |f|
  = devise_error_messages!
  = f.input :email
  = f.button :submit, t('.send_me_reset_password_instructions'), class: "btn btn-raised btn-primary"

