- @page_title = t("views.headlines.index.page_title")
%section
  .container
    .row
      .col-12
        %h1= @page_title = t("views.headlines.index.page_title")
    .row
      .col-12
        .card-deck.headlines-list
          = render partial: "headlines/card", collection: @headlines, as: :headline, locals: {card_klass: 'mt-4'}

        = will_paginate @headlines, list_classes: %w(pagination justify-content-center mt-5 flex-wrap)
