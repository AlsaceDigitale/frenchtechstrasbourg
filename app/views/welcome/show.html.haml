%h1= t("views.welcome.show.latest_headlines")
.row{style: "margin-top:20px;"}
  - for headline in @headlines
    .col-xs-12.col-sm-4
      = image_tag headline.banner.url(:medium), class: "img-responsive-fixed-height", style: "object-fit:cover;margin-bottom:10px;"
      %strong{style: "display:block;font-size:120%;max-height:50px;margin:5px 0;"}= headline.title
      %em{style: "display:block;"}= l(headline.published_at, format: :published_at, link: headline_path(headline)).html_safe
      = strip_tags(headline.chapo)
      = link_to t("views.welcome.show.read_more"), headline
= link_to headlines_path, class: "btn btn-primary", style: "margin-top:20px;" do
  = t("views.welcome.show.link_to_all_headlines")
  = fa_icon "angle-right"

%h1{style: "margin-top:60px;"}= t("views.welcome.show.latest_startups")
.row
  = render @startups
= link_to startups_path, class: "btn btn-primary", style: "margin-top:20px;" do
  = t("views.welcome.show.link_to_all_startups")
  = fa_icon "angle-right"
