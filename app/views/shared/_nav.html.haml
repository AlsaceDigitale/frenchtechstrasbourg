%nav.navbar.welcome{class: controller.controller_name != "welcome" ? "small": nil}
  - if controller.controller_name == "welcome"
    %a.fa.fa-chevron-down.fa-2x.readnext{href: "#"}
  .container
    .navbar-header
      %button.navbar-toggler.hidden-sm-up{"aria-controls" => "navbarResponsive", "aria-expanded" => "false", "data-target" => "#navbarResponsive", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        = fa_icon "bars", style: "color:white;"

      - if controller.controller_name != "welcome"
        = link_to "Strasbourg Startups", root_path, class: "navbar-brand"
    = render "/shared/real_nav"
    - if controller.controller_name == "welcome"
      .row
        .col-xs-12
          .title.text-xs-center Strasbourg Startups
          .subtitle.text-xs-center= @page_description
